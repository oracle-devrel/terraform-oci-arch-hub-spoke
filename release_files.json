// see https://github.com/oracle-devrel/action-release-zip-maker for docs
[
  {
    "action": "create_zip",
    "file_name": "terraform-oci-arch-hub-spoke-stack-latest.zip",
    "files": [
      {
        "src_pattern": "*.tf",
        "dst_path": ".",
        "exclude": [
          "provider.tf",
          "variables.tf"
        ]
      },
      {
        "src": "LICENSE"
      },
      {
        "src": "schema.yaml",
        "dst": "schema.yaml"
      },
      {
        "src": "orm/variables.tf",
        "dst": "variables.tf"
      },
      {
        "src": "orm/provider.tf",
        "dst": "provider.tf"
      },
      {
        "src_pattern": "scripts/*"
      }          
    ]
  },
  {
    "action": "upload_file",
    "file_name": "terraform-oci-arch-hub-spoke-stack-latest.zip"
  }
]
